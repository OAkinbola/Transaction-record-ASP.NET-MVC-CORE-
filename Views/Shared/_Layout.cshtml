<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
</head>


<body>

    <header>
        <nav class=" navbar navbar-expand-lg navbar-toggler navbar-dark bg-light border-bottom box-shadow  font-weight-bolder nav-justified">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.PNG" height="100" width="80"></a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class=" navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Transactions" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Transaction" asp-action="Add">Add Transaction</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Transactions" asp-action="Index">Transactions</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Companies" asp-action="Index">Companies</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    @if (TempData.Keys.Contains("message"))
    {
        <h3 class="alert alert-success alert-dismissible ">
            @TempData["message"]
        </h3>
    }


    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
