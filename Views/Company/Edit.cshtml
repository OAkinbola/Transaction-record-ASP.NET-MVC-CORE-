@model Company
@{
    string title = ViewBag.Action + "Company";
    ViewBag.Title = title;
}

<h2>@title</h2>


<form asp-controller="Company" asp-action="@ViewBag.Action" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CompanyName">Company Name</label>
        <input asp-for="CompanyName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="CompanyAddress">CompanyAddress</label>
        <input asp-for="CompanyAddress" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Ticker">Ticker</label>
        <input asp-for="Ticker" class="form-control">
    </div>

    <input type="hidden" asp-for="CompanyId" />

    <input type="submit" value="@ViewBag.Action" class="btn btn-primary" />
    <a asp-controller="Companies" asp-action="Index" class="btn btn-primary">Cancel</a>

</form>